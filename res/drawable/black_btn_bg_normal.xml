<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:angle="90"
        android:startColor="#000000"
        android:centerColor="#000000"
        android:endColor="#5D5D5D"
        android:type="linear"
        />
    <stroke android:width="@dimen/default_stroke_width"
        android:color="@color/stroke_color"
        />

    <padding android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"
        />

    <corners
        android:bottomRightRadius="@dimen/default_rounded_corner"
        android:bottomLeftRadius="@dimen/default_rounded_corner"
        android:topLeftRadius="@dimen/default_rounded_corner"
        android:topRightRadius="@dimen/default_rounded_corner"
        />
</shape>

