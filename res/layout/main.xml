<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@drawable/actionbar_bg"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/main_btn_more"
            android:layout_width="@dimen/large_button_size"
            android:layout_height="match_parent"
            android:onClick="onClickMore"
            android:src="@drawable/icon_more"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:background="@drawable/btn_bg"
            />
        <Button
            android:id="@+id/main_btn_add"
            android:layout_width="@dimen/large_button_size"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/text_aluminium"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:onClick="onClickAdd"
            android:visibility="gone"
            />
        <include
            android:layout_toRightOf="@id/main_btn_add"
            android:layout_width="@dimen/v_divider_width"
            android:layout_height="match_parent"
            layout="@layout/v_divider"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                style="@style/actionbar_title"
                />
        </LinearLayout>
        <include
            android:layout_width="@dimen/v_divider_width"
            android:layout_height="match_parent"
            layout="@layout/v_divider"
            />
        <Button
            android:id="@+id/main_btn_edit"
            android:layout_width="@dimen/large_button_size"
            android:layout_height="match_parent"
            android:text="Edit"
            android:textColor="@color/text_aluminium"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:onClick="onClickEdit"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/main_list_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/list_bg"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/main_hint"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#EEEEEE"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unlock_hint"
            android:layout_margin="@dimen/large_gutter"
            />
        <ImageButton
            android:layout_width="@dimen/large_button_size"
            android:layout_height="@dimen/large_button_size"
            android:text="Unlock"
            android:onClick="onClickReload"
            android:scaleType="centerInside"
            android:src="@drawable/icon_lock"
            android:layout_margin="@dimen/small_gutter"
            />
    </LinearLayout>
</LinearLayout>

