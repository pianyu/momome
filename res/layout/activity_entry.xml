<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@drawable/actionbar_bg"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/actionbar_logo_width"
                android:layout_height="@dimen/actionbar_logo_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/small_gutter"
                android:src="@drawable/logo"
                android:scaleType="centerInside"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                style="@style/actionbar_title"
                />
        </LinearLayout>
        <Button
            android:id="@+id/entry_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_aluminium"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:text="Edit"
            android:onClick="onClickEditButton"
            />
        <include
            android:layout_toLeftOf="@id/entry_edit_button"
            android:layout_width="@dimen/v_divider_width"
            android:layout_height="match_parent"
            layout="@layout/v_divider"
            />
        <Button
            android:id="@+id/entry_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="Add"
            android:textColor="@color/text_aluminium"
            android:onClick="onClickAddButton"
            android:padding="10dp"
            android:background="@drawable/btn_bg"
            android:visibility="gone"
            />
        <include
            android:layout_toRightOf="@id/entry_add_button"
            android:layout_width="@dimen/v_divider_width"
            android:layout_height="match_parent"
            layout="@layout/v_divider"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/entry_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/list_bg"
        />
</LinearLayout>

