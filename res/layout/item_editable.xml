<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_height"
    android:padding="@dimen/default_gutter"
    >
    <ImageView
        android:id="@+id/item_btn_edit"
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/default_gutter"
        android:padding="6dp"
        android:src="@drawable/icon_edit"
        android:background="@drawable/actionbar_btn_bg"
        android:text="Edit"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/item_btn_edit"
        android:layout_alignParentTop="true"
        style="@style/item_title"
        />
    <ImageView
        android:id="@+id/item_btn_delete"
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_delete"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
</RelativeLayout>

